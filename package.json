{
	"name": "@kylsgl/eslint-config",
	"version": "1.0.7",
	"description": "ESLint rules for JavaScript, TypeScript, and React, based on the Airbnb JavaScript Style Guide.",
	"keywords": [
		"eslint",
		"eslintconfig",
		"eslint-config"
	],
	"homepage": "https://github.com/kylsgl/eslint-config#readme",
	"bugs": {
		"url": "https://github.com/kylsgl/eslint-config/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kylsgl/eslint-config"
	},
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/kylsgl"
		},
		{
			"type": "ko-fi",
			"url": "https://ko-fi.com/kylsgl"
		}
	],
	"license": "MIT",
	"author": {
		"name": "kylsgl",
		"email": "hello@kylsgl.com",
		"url": "https://github.com/kylsgl"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"./dist",
		"./CHANGELOG.md"
	],
	"scripts": {
		"build": "pnpm generate:rules && rollup --config ./rollup.config.mjs",
		"build:eslint": "pnpm generate:rules && rollup --config ./scripts/eslint-config/rollup.config.mjs",
		"format": "prettier --write .",
		"generate:rules": "tsx ./scripts/generate-rules.ts",
		"lint": "eslint ./",
		"lint:fix": "pnpm lint --fix",
		"lint:measure": "tsx ./scripts/eslint-measure.ts",
		"precommit": "pnpm lint:fix && pnpm format && pnpm test",
		"release": "pnpm build && changeset publish",
		"test": "tsc --noEmit && vitest --coverage"
	},
	"dependencies": {
		"@stylistic/eslint-plugin": "5.8.0",
		"@typescript-eslint/utils": "8.55.0",
		"@vitest/eslint-plugin": "1.6.7",
		"eslint-config-prettier": "10.1.8",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-plugin-import-x": "4.16.1",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-n": "17.23.2",
		"eslint-plugin-package-json": "0.88.2",
		"eslint-plugin-perfectionist": "5.5.0",
		"eslint-plugin-promise": "7.2.1",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-react-refresh": "0.5.0",
		"eslint-plugin-regexp": "3.0.0",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-sonarjs": "3.0.7",
		"eslint-plugin-testing-library": "7.15.4",
		"eslint-plugin-tsdoc": "0.5.0",
		"eslint-plugin-unicorn": "63.0.0",
		"globals": "17.3.0",
		"typescript-eslint": "8.55.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@kylsgl/changelog-github": "^1.0.0",
		"@types/estree": "^1.0.8",
		"@types/node": "^25.2.3",
		"@vitest/coverage-istanbul": "^4.0.18",
		"eslint": "^9.39.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"rollup": "^4.57.1",
		"rollup-plugin-dts": "^6.3.0",
		"rollup-plugin-esbuild": "^6.2.1",
		"terser": "^5.46.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	}
}
